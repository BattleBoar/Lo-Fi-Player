<Window x:Class="LofiVisualiser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lo-Fi Player" Height="600" Width="800"
        WindowStyle="None" AllowsTransparency="True" 
        Background="Transparent">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#60FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background with blur effect -->
        <Border Background="#80151525" CornerRadius="10">
            <Border.Effect>
                <BlurEffect Radius="15"/>
            </Border.Effect>
        </Border>

        <!-- Main content -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title bar -->
            <Border Grid.Row="0" Background="#40000000" CornerRadius="5" 
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Lo-Fi Player" Foreground="White" 
                               FontSize="14" FontWeight="Light"
                               VerticalAlignment="Center" Margin="10,5"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="MinimizeBtn" Content="─" 
                                Background="#20FFFFFF" Width="30"/>
                        <Button x:Name="MaximizeBtn" Content="🗖" 
                                Background="#20FFFFFF" Width="30" Margin="5,0,0,0"/>
                        <Button x:Name="CloseBtn" Content="✕" 
                                Background="#20FF4444" Width="30" Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Visualization area -->
            <Border Grid.Row="1" Background="#10000000" CornerRadius="8" 
                    BorderBrush="#40FFFFFF" BorderThickness="1">
                <Canvas x:Name="VisualCanvas" Background="Transparent"/>
            </Border>

            <!-- Time controls -->
            <Grid Grid.Row="2" Margin="0,10,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="CurrentTimeText" Grid.Column="0" 
                          Text="0:00" Foreground="White" 
                          VerticalAlignment="Center" Margin="5,0"/>

                <Slider x:Name="TimeSlider" Grid.Column="1"
                       Minimum="0" Maximum="100" Value="0"
                       VerticalAlignment="Center" Margin="10,0"/>

                <TextBlock x:Name="TotalTimeText" Grid.Column="2" 
                          Text="0:00" Foreground="White" 
                          VerticalAlignment="Center" Margin="5,0"/>
            </Grid>

            <!-- Controls -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" 
                        HorizontalAlignment="Center" Margin="0,5,0,0">
                <Button x:Name="LoadBtn" Content="🎵 Load Audio"/>
                <Button x:Name="PlayBtn" Content="⏵ Play"/>
                <Button x:Name="PauseBtn" Content="⏸ Pause"/>
                <Button x:Name="StopBtn" Content="⏹ Stop"/>

                <!-- Исправлено имя с VisualStyleCombo на StyleCombo -->
                <ComboBox x:Name="StyleCombo" Margin="10,0" 
                          Background="#20FFFFFF" Foreground="Black"
                          BorderThickness="0" Padding="5" SelectedIndex="0">
                    <ComboBoxItem Content="Bars"/>
                    <ComboBoxItem Content="Dots"/>
                    <ComboBoxItem Content="Grid"/>
                </ComboBox>

                <!-- Volume control -->
                <StackPanel Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center">
                    <TextBlock Text="🔊" Foreground="White" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <Slider x:Name="VolumeSlider" Width="80" 
                           Minimum="0" Maximum="1" Value="0.5"
                           VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>